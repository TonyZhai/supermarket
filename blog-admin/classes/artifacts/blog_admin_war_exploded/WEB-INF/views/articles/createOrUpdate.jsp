<%@page language="java" contentType="text/html; charset=utf-8" pageEncoding="utf-8"%><%@include file="/WEB-INF/common/taglibs.jsp"%><div class="bodyDiv">    <form:form id="form" method="POST" modelAttribute="article" action="${ctx}/articles">        <input type="hidden" name="_method" value="${requestMethod}"/>        <p>            <label>Title</label>            <form:input path="title" cssClass="{required:true]"/>        </p>        <p>            <label>Content</label>            <form:input path="content"/>        </p>        <p>            <input type="button" id="btn_save" value="Save"/>            <input type="button" id="btn_cancel" value="Cancel"/>        </p>    </form:form></div><script type="text/javascript" src="${ctx}/static/javascript/views/articles/article.js"></script><script type="text/javascript">    $(function(){        Blog_View.article.createOrUpdate.initPage("${ctx}");    });</script>